{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build library",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install library",
            "type": "shell",
            "command": "sudo",
            "args": [
                "make",
                "install"
            ],
            "problemMatcher": []
        },
        {
            "label": "Uninstall library",
            "type": "shell",
            "command": "sudo",
            "args": [
                "make",
                "uninstall"
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean build environment",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        }
    ]
}
